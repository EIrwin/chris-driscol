{
  "extends": [
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "plugins": [
    "flowtype",
    "react",
    "prettier"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "prettier/prettier": "error",
    "react/prefer-stateless-function": 2,
    "react/prop-types": [1, { "skipUndeclared": true }],
    "react/display-name": 2,
    "camelcase": 0,
    "flowtype/require-valid-file-annotation": [2, "always"]
  }
}
