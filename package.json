{
  "name": "chris-driscol",
  "version": "1.0.0",
  "description": "Source code for https://chrisdriscol.com",
  "main": "index.js",
  "repository": "git@github.com:cdriscol/chris-driscol.git",
  "author": "chris@driscolsoftware.com",
  "license": "MIT",
  "scripts": {
    "lint": "eslint *.js src tools",
    "relay-compiler": "relay-compiler --src src --schema src/graphql/schema.graphql",
    "update-schema": "babel-node tools/update-schema.js",
    "clean": "rimraf dist",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.config.server.js",
    "start": "yarn relay-compiler && cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development nodemon index.js",
    "start:prod": "yarn relay-compiler && cross-env NODE_ENV=production node index.js",
    "bs": "yarn clean && yarn build && yarn build:server && yarn start:prod"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "eslint": "^4.15.0",
    "eslint-config-4catalyzer-react": "^0.3.3",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.0.0",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "farce": "^0.2.5",
    "found": "^0.3.7",
    "found-relay": "^0.3.0-alpha.10",
    "graphql": "^0.12.3",
    "graphql-relay": "^0.5.4",
    "isomorphic-fetch": "^2.2.1",
    "lint-staged": "^6.0.0",
    "nodemon": "^1.14.11",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-relay": "^1.4.1",
    "relay-compiler": "^1.4.1",
    "relay-runtime": "^1.4.1",
    "serialize-javascript": "^1.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-relay": "^1.4.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-native-modules": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.26.0",
    "chunk-manifest-webpack-plugin": "0.1.0",
    "cssnano": "^3.10.0",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^1.0.1",
    "json-loader": "^0.5.7",
    "postcss-cssnext": "^2.6.0",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.3.3",
    "react-hot-loader": "^3.1.3",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "2.1.0-beta.8",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^2.11.1",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-hot-middleware": "^2.10.0",
    "webpack-manifest-plugin": "^1.3.2"
  }
}
